{
  "manifest_version": 3,
  "name": "Synthex",
  "version": "5.0",
  "description": "Synthex v5 \u2014 Structured, polished, fully functional flashcards.",
  "permissions": [
    "scripting",
    "storage",
    "activeTab",
    "clipboardWrite",
    "history"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}